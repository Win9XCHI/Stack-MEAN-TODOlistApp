doctype html
html(ng-app="TODO list")
  head
    meta(name='viewport', content='width=device-width,initial-scale=1.0')
    title= title
    link(rel='stylesheet', href='/bootstrap/css/bootstrap.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    .container.mb-5.pb-5#main
       block content  
    .container.mb-5.pb-5.text-center
            button.btn.btn-primary.btn-lg(type="button", data-toggle="modal", data-target="#myModal") Add TODO list
     
    .modal#myModal(tabindex="-1", role="dialog")
        .modal-dialog(role="document")
            .modal-content
              .modal-header
                .modal-title#infoBlockAdd Add new project
                button.close(type="button", data-dismiss="modal", aria-label="Close")
                  span(aria-hidden="true") &times;
              .modal-body
                input.form-control#NameProject(type="text", placeholder="Start typing here to create a project")
              .modal-footer
                button.btn.btn-secondary(type="button", data-dismiss="modal") Close
                button.btn.btn-primary#AddProject(type="button") Add
                
    .modal#ModalEditProject(tabindex="-1", role="dialog")
        .modal-dialog(role="document")
            .modal-content
              .modal-header
                .modal-title#infoBlockEditProject Edit project form
                button.close(type="button", data-dismiss="modal", aria-label="Close")
                  span(aria-hidden="true") &times;
              .modal-body
                input.form-control#NameEditProject(type="text", placeholder="Start typing here to edit a project")
              .modal-footer
                button.btn.btn-secondary(type="button", data-dismiss="modal") Close
                button.btn.btn-primary#EditProjectModal(type="button") Edit    
                
    .modal#ModalEditTask(tabindex="-1", role="dialog")
        .modal-dialog(role="document")
            .modal-content
              .modal-header
                .modal-title#infoBlockEditTask Edit task form
                button.close(type="button", data-dismiss="modal", aria-label="Close")
                  span(aria-hidden="true") &times;
              .modal-body
                input.form-control#NameEditTask(type="text", placeholder="Start typing here to edit a task")
              .modal-footer
                button.btn.btn-secondary(type="button", data-dismiss="modal") Close
                button.btn.btn-primary#EditTaskModal(type="button") Edit   

        
    .footer.text-muted
     .container
       p.float-right
       a(href="#") Наверх
